function gentestnode {
    mkdir test
    curl https://gist.githubusercontent.com/davemckenna01/b23fa9b55b3e2c21fc36/raw/cff9b50fa697d35e5ab5c661d264f6d260d6968e/gistfile1.js > test/test.js 
}

